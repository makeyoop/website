<div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
  <div class="carousel-inner">
    <div class="carousel-item active">
      <img src="images/makeup.jpg" class="d-block w-100">
    </div>
    <div class="carousel-item">
      <img src="images/makeup2.jpg" class="d-block w-100">
    </div>
    <div class="carousel-item">
      <img src="images/makeup3.jpg" class="d-block w-100">
    </div>
  </div>
  <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>

<div class="index-container">
  <h1>Últimos productos</h1>

  <div class="products-container">
    {{#each products}}
    <div class="item-container">
      <img src="{{this.image_link}}">
      <h5><a href="/products/{{this._id}}">{{this.name}}</a></h5>
    </div>
    {{/each}}
  </div>

  <a href="products/">
    <h4 class="d-flex justify-content-center">Ver más productos</h2>
  </a>
</div>